<h1>Posts</h1>

<% @posts.each do |post| %>

    <h3><%= link_to post.title, post %> </h3>  
    <h3><%= post.description %> </h3>  
    <h3><%= link_to 'Edit', edit_post_path(post) %> </h3>  
    <h3><%= link_to "Destroy", post_path(post), method: :delete,data:{confirm: 'Are you sure?'} %> </h3>  
<br>
<% end %>


<%= link_to 'New post', new_post_path %>